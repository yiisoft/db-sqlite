{
    "name": "yiisoft/db-sqlite",
    "type": "library",
    "description": "Yii DataBase SQLite Extension",
    "keywords": [
        "yii",
        "sqlite"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/yiisoft/db-sqlite",
        "issues": "https://github.com/yiisoft/db-sqlite/issues",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "chat": "https://t.me/yii3en",
        "irc": "irc://irc.freenode.net/yii"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "yiisoft/db": "^3.0@dev"
    },
    "require-dev": {
        "ext-json": "*",
        "maglnet/composer-require-checker": "^4.2",
        "phpunit/phpunit": "^9.5|^10.0",
        "rector/rector": "^0.14",
        "roave/infection-static-analysis-plugin": "^1.16",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.3|^5.6",
        "yiisoft/aliases": "^2.0",
        "yiisoft/cache-file": "^2.0",
        "yiisoft/json": "^1.0",
        "yiisoft/var-dumper": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Db\\Sqlite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Db\\Sqlite\\Tests\\": "tests",
            "Yiisoft\\Db\\Tests\\": "vendor/yiisoft/db/tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "composer/package-versions-deprecated": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
